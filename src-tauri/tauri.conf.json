{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ampersand",
  "version": "0.1.1",
  "identifier": "moe.ampersand.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn rsbuild dev",
    "beforeBuildCommand": "yarn build:rsbuild"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ampersand",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "resources": {
      "../assets/": ""
    },
    "targets": [
      "deb",
      "rpm",
      "appimage",
      "dmg",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "android": {
      "versionCode": 1
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
